<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:text="
富强、民主、文明、和谐。\n
自由、平等、公正、法治。\n
爱国、敬业、诚信、友善。"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:textSize="23sp"
            android:textColor="@color/menu_nav_checked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="basic-基础工作"
            tools:text="MVVM ARouter 注解 反射 ASM " />

        <Button
            android:id="@+id/tvUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI-页面化妆"
            tools:text="抽屉效果  底部导航  弹窗  多布局列表  动画效果 " />

        <Button
            android:id="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA-数据操控"
            tools:text="本地持久化 网络请求 数据库 文件系统 对象文件 " />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOOL-工具集合"
            tools:text="图片选择-裁剪  文件选择 " />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ndk &amp; C++-底层开发"
            tools:text="cmake so库  jni语法 " />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="openCV-机器视觉"
            tools:text="人脸识别  物体识别  手指  坐姿  动作检测" />

    </LinearLayout>

</layout>